{
  "version": 2,
  "buildCommand": "echo '{\"theme\":\"light\",\"themes\":{\"light\":{\"colors\":{\"primary\":\"#0070f3\",\"background\":\"#ffffff\",\"card\":\"#f5f5f5\",\"text\":\"#333333\"}}}}' > theme.json && npm run build",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}
